<h1><%= @player.username %></h1>

<strong>Team:</strong>
<%= @player.team.name || "none" %>
</p>
<% if @player.team %>
  <% status = @player.team.status %>
  <p>
    <strong>Team Status:</strong>
    <%= status.capitalize %>
  </p>
  <% if status == "endangered" %>
    <p>
      <strong>Hit:</strong>
      <%= time_ago_in_words @player.team.hittime %> ago.
    </p>
    <p>
      <strong>By:</strong> <%= @player.team.assassin.name %>
      <ul>
      <% @player.team.assassin.users.each do |user| %>
        <li><%= user.username %></li>
      <% end %>
      </ul>
  <% end %>
<% end %>
