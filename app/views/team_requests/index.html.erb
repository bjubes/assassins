<p id="notice"><%= notice %></p>

<h1>Team Requests</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Reciever</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_requests.each do |team_request| %>
      <tr>
        <td><%= team_request.sender_id %></td>
        <td><%= team_request.reciever_id %></td>
        <td><%= team_request.team_id %></td>
        <td><%= link_to 'Show', team_request %></td>
        <td><%= link_to 'Edit', edit_team_request_path(team_request) %></td>
        <td><%= link_to 'Destroy', team_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

