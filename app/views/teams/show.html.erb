<h2><%= @team.name %></h2>
<thead><strong>Members:</strong></thead>
<% if @team.users.count ==0 %> none <% end %>
<ul>
<% @team.users.each do |user| %>
  <li><%= link_to user.username, player_path(user) %></li>
<% end %>
</ul>

<% status = @team.status %>
<p>
  <strong>Status:</strong>
  <span class="label label-<%= boostrap_color_from_status status%>"><%= status.capitalize %></span>
</p>
<% if status == "endangered" %>
  <p>
    <strong>Hit:</strong>
    <%= time_ago_in_words @team.hittime %> ago.
  </p>
  <p>
    <strong>By:</strong> <%=link_to @team.assassin.name, @team.assassin %>
    <ul>
    <% @team.assassin.users.each do |user| %>
    <li><%= link_to user.username, player_path(user) %></li>
    <% end %>
    </ul>
<% end %>
<p>
<% if current_user.team == @team %>
  <% if @team.users.count < 2 %>
    <%= link_to 'Add User to Team', new_team_request_path %> |
  <% end %>
  <%= link_to 'Edit', edit_team_path(@team) %> |
  <%= back_link %>
<% end %>
