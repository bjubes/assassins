<h1>Teams <span class="pull-right"><%= link_to new_team_path, class: "btn btn-default" do %>
New Team <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
<% end %>
</span></h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th colspan="2">Players</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= link_to team.name, team %></td>
          <td><span class="label label-<%= boostrap_color_from_status team.status%>"><%= team.status.capitalize %></span></td>

          <% team.users.each do |user| %>
            <td><%= link_to user.username, player_path(user) %></td>
          <%end%>

          <% if current_user.team == team %>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
          <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
