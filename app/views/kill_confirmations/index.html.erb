<p id="notice"><%= notice %></p>

<h1>Kill Confirmations</h1>

<table>
  <thead>
    <tr>
      <th>Kill</th>
      <th>Sender</th>
      <th>Reciever</th>
      <th>State</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kill_confirmations.each do |kill_confirmation| %>
      <tr>
        <td><%= kill_confirmation.kill.to_sentence %></td>
        <td><%= kill_confirmation.sender.username %></td>
        <td><%= kill_confirmation.receiver.username %></td>
        <td><%= kill_confirmation.state %></td>
        <td><%= kill_confirmation.confirmed? %></td>
        <td><%= link_to 'Show', kill_confirmation %></td>
        <td><%= link_to 'Edit', edit_kill_confirmation_path(kill_confirmation) %></td>
        <td><%= link_to 'Destroy', kill_confirmation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

