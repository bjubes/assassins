<h1>New Game</h1>

<%= form_for(@game) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :code %>
    <%= f.text_field :code, autofocus: true %>
    <p>leave code blank to allow anyone to join</p>
  </div>

    <%= f.submit "Send Request" %>
  </div>
<% end %>
<%= link_to 'Back', games_path %>
